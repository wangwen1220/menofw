/*! Main Style by Steven 2014-8-1 */

support-for-ie = false

@import 'nib'
@import 'wcss'

/* Var
============================================================================= */
fonts = 'Microsoft Yahei', 'Helvetica Neue', Helvetica, Arial, sans-serif
dark-red = #c00
light-gray = #eee
dark-gray = #ebebeb

red-light = #CC0
blue = #1A4991
blue-dark = #243851
gray-dark = #444
yellow = #FE8900
green = #379A00

/* Reset
============================================================================= */
*,
*:before,
*:after
  box-sizing border-box

html
  font-size 10px
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  background dark-gray

body
  font-family fonts
  font-size 1.2rem
  line-height 1.428571429
  color #333
  // min-width 320px
  // max-width 100%
  // user-select none
  background-color #fff

h1,
h1,
h3,
h4,
h5,
h6
  margin 0
  font: inherit;
  // font-family: inherit;
  // font-weight: 500;
  // line-height: 1.1;

ul,
ol
  margin 0
  padding 0
  list-style none

a
  color inherit
  text-decoration none

a:hover
  color inherit
  // text-decoration underline

a:focus
  outline thin dotted
  outline 5px auto -webkit-focus-ring-color
  outline-offset -2px

img
  vertical-align middle

.img-responsive
  display block
  height auto
  max-width 100%

.img-rounded
  border-radius 6px

.img-thumbnail
  display inline-block
  height auto
  max-width 100%
  padding 4px
  line-height 1.42857143
  background-color #fff
  border 1px solid #ddd
  border-radius 4px
  -webkit-transition all 0.2s ease-in-out
  transition all 0.2s ease-in-out

.img-circle
  border-radius 50%

hr,
.hr
  clear both
  margin 10px 0
  // padding 0
  // height 0
  border 0
  border-top 1px solid #eee

mark
  color #333
  background #ffa

textarea
  resize vertical

/* Helper
========================================================================== */
/* 排版 */
.highlight
  color red !important

.fn-tl
  text-align left !important

.fn-tc
  text-align center !important

.fn-tr
  text-align right !important

.fn-tj
  text-align justify !important

.fn-nowrap
  white-space nowrap !important

.fn-brk
  word-wrap break-word !important

.fn-lowercase
  fn-transform lowercase !important

.fn-uppercase
  fn-transform uppercase !important

.fn-capitalize
  text-transform capitalize !important

.fn-dn,
.js-hide
  display none !important

.fn-di
  display inline !important

.fn-db
  display block !important

.fn-dib
  display inline-block !important

.fn-vh
  visibility hidden !important

.fn-auto
  margin-left auto !important
  margin-right auto !important

.f0
  font-size 0 !important

.p0
  padding 0 !important

.m0
  margin 0 !important

.mt0
  margin-top 0 !important

.mb0
  margin-bottom 0 !important

.mxh70
  max-height 70px !important

/* AD */
.ad
  margin 10px auto
  overflow hidden
  text-align center
  background #f8f8f8

.ad a
  display block

.ad img
  width 100%

/* 遮罩层 */
.fn-mask
  display none
  fixed top left bottom right
  z-index 111
  background rgba(0,0,0,.4)

/* js placeholder style */
.placeholder
  color #A6A6A6 !important

/* Plugin
========================================================================== */
// js-slider 模块 for swipe.js
.w-slider
  position relative
  overflow hidden
  visibility hidden

  & > .slider-cnt
    position relative
    overflow hidden

    & > .slider-item
      position relative
      float left
      width 100%

/* TPL
========================================================================== */
// w-recommend 模块
.w-recommend
  margin 1rem 0

  & .w-recommend-hd
    position relative
    text-align center

    &:after
      content ''
      position absolute
      left 0
      right 0
      top 50%
      margin-top -1px
      display block
      border-top 1px #D5D5D5 solid

    & > .title
      position relative
      z-index 1
      display inline-block
      padding 0 10px
      color #545454
      font-size 1.2rem
      background #fff

      &:before
        content ''
        display inline-block
        margin-right 5px
        width 13px
        height 13px
        background url(../img/icon-arrow-circle.png) 50% 50% no-repeat
        background-size contain
        vertical-align middle

// w-piclist 模块
.w-piclist
  display flex
  flex-wrap wrap
  justify-content space-between
  margin 15px 0

  & > .item
    flex 1 60px
    max-width 100px
    padding 0 10px
    // background #ccc

    & > .pic
      display block
      min-height 60px
      border 1px #eee solid
      text-align center
      // background #ccc
      // line-height 60px

      & > img
        width 100%
        height auto
        // max-width 100%

      &:after
        content ''
        line-height 60px
        vertical-align middle

    & > .name
      margin-top 5px
      height 26px
      line-height 13px
      overflow hidden
      color #50739E
      font-size 1rem
      font-family Arial

/*
@name w-btn
@overview 通用按钮模块
@require null
*/
.w-btn, a.w-btn
  display inline-block
  padding .5em 1em
  border 1px solid rgba(0,0,0,.25)
  border-radius 0.3em
  background-image none
  box-shadow 0 1px rgba(0,0,0,.15), inset 0 1px rgba(255,255,255,.15)
  color #fff
  text-align center
  text-decoration none
  text-shadow 1px 1px rgba(0,0,0,.1)
  font-size 100%
  font-family inherit
  font-weight inherit
  white-space nowrap
  user-select none
  overflow visible
  cursor pointer

.w-btn:hover, .w-btn:focus
  text-decoration none
  background-image linear-gradient(to bottom, rgba(0,0,0,.1), rgba(0,0,0,.1))

.w-btn:focus
  outline thin dotted
  // outline 5px auto -webkit-focus-ring-color
  outline-offset -2px

.w-btn:active
  box-shadow 0 1px rgba(0,0,0,.2), inset 0 1px rgba(0,0,0,.05)
  outline none

.w-btn-blue, a.w-btn-blue
  background linear-gradient(#4EA6D5, #4395CA)

.w-btn-blue:focus, .w-btn-blue:hover, a.w-btn-blue:hover
  background-color #4EA6D5

.w-btn-yellow, a.w-btn-yellow
  background linear-gradient(#FFFB81, #FFD147)

.w-btn-yellow:focus, .w-btn-yellow:hover, a.w-btn-yellow:hover
  background #FFE35F

/*
@name w-pager
@overview 分页模块
@require null
*/
.w-pager
  text-align right
  color #000
  font-size 12px
  font-family Arial
  white-space nowrap

.w-pager a
  display inline-block
  margin 0 3px
  width 25px
  height 24px
  line-height 24px
  overflow hidden
  color #000
  text-align center
  vertical-align middle

.w-pager a.prev, .w-pager a.next
  width auto

.w-pager a:hover
  color #E82D2C

.w-pager a.current
  color #fff
  font-weight bold
  background-color #E82D2C
  text-decoration none
  cursor default

.w-pager a i
  font-family sans-serif
  /*-webkit-transform scale(0.5)*/

/*
@name w-cnt
@overview 通用内容块样式
@require null
*/
.w-cnt
  padding 0 10px

.w-cnt-hd
  margin-left -10px
  margin-right -10px
  height 30px
  line-height 30px
  overflow hidden
  border-bottom 2px solid #DBDBDB

// .w-cnt-bd
//   padding 0 10px

/*
@name w-box
@overview 通用盒模块
@require null
*/
.w-box
  margin 10px auto

.w-box-hd
  display flex
  height 38px
  line-height 38px
  border-top 2px solid red
  background #F3F3F3

.w-box-hd .title
  padding 0 .5em
  overflow hidden
  font-size 1.1em
  font-weight bold
  color red

.w-box-hd .more
  flex 1
  text-align right

.w-box-hd .more a
  margin-right .5em

.w-box-bd
  padding 0 10px

/*
@name w-viewmore
@overview 通用查看更多模块
@require null
*/
.w-viewmore
  display block
  margin 1.5rem 0
  padding .3rem 0
  text-align center
  font-size .8rem
  color #444
  background #f3f3f3
  &:after
    content ''
    arrow top 4px #444
    margin-left 4px
    vertical-align -1px
  &.loading:after
    content none
  // &.loading:before
  //   content ''
  //   display inline-block
  //   margin-right 5px
  //   width 18px
  //   height 18px
  //   background #444 url(../img/loading.gif) 0 50% no-repeat
  //   box-sizing 18px
  //   vertical-align top
  &.mod2
    border 1px solid #d6d6d6
    border-radius 1px
    color #666
    background-color #fff
    &:after
      border-top-color #666
  & .ui-refresh-icon
    display none

/* 上拉加载页 */
.scroll-refresh .w-viewmore
  opacity 0
  // margin-top -10px
  margin-left 10px
  margin-right 10px
  transition .25s ease-in
  &.loading
    opacity 1

/*
@name w-art
@overview 通用图文模块
@require null
*/
.w-art
  // margin 10px 0
  padding 10px 0
  clearfix()

  & .pic
    float left
    margin-right 10px

  & .txt
    overflow hidden

    & h3
      max-height 48px
      color blue-dark
      overflow hidden

      & a
        display block

/* 带边框 */
.w-art-hr
  margin 10px 0 0
  padding 0 0 10px
  border-bottom 1px #DEDEDE solid
  & .txt h3
    color #000
  & .txt p
    margin-top 5px
    font-size .75rem
    color #999
    vertical-align bottom
    & time
      margin-left 1.5rem

// 横屏
@media only screen and (min-width 321px) and (orientation landscape)
  .w-art-wrap
    display flex
    flex-wrap wrap
    justify-content space-between

    & .w-art
      width 49%

/*
@name w-headline
@overview 通用新闻头条模块
@require null
*/
.w-headline
  margin-top 10px
  text-align center
  & h2
    height 25px
    line-height 25px
    overflow hidden
    font-weight bold
    font-size 1.1rem
    color #1A4991
  & p
    height 24px
    line-height 24px
    overflow hidden
    color blue-dark
    font-size .88em
    & i
      color #999
      font-family Serif
      vertical-align middle

/*
@name w-list
@overview 通用列表模块
@require null
*/
.w-list-item
  height 40px
  line-height 40px
  overflow hidden
  word-wrap break-word
  border-bottom 1px #DEDEDE solid

  & a
    display block
    color blue-dark
    overflow ellipsis

  & a strong
    font-weight bold
    color blue

  & a em
    color blue

/* headline */
.w-list.headline .w-list-item
  font-size 1.1rem
  text-align center

// 横屏
@media only screen and (min-width 321px) and (orientation landscape)
  .w-list
    display flex
    flex-wrap wrap
    justify-content space-between
    &.headline
      display block

  .w-list-item
    // width 50%
    flex 1 50%

/*
@name w-search
@overview 搜索模块
@require null
*/
.w-search
  display flex
  margin 20px 0
  height 36px
  border 1px #D1D1D1 solid
  border-radius .3rem
  overflow hidden

.w-search input
  display block
  padding 10px 5px
  flex 1
  // width 480px
  height 16px
  border none
  outline none
  font-size 20px

.w-search button
  display block
  padding 0 1rem
  // width 100px
  height 100%
  border none
  border-left 1px #D1D1D1 solid
  text-align center
  color #666
  font-size 1rem
  // letter-spacing .2em
  background #F9F9F8

/*
@name w-cats
@overview 分类模块
@require null
*/
.w-cats
  margin 10px 0
  background #F3F3F3

.w-cats-hd
  height 21px
  line-height 21px
  background #CDCDCD
  & .title
    position relative
    display inline-block
    padding 0 1em
    color #fff
    font-size .8em
    vertical-align bottom
    background yellow
  & .title:after
    position absolute
    bottom -10px
    left 50%
    margin-left -2px
    content ''
    arrow top 5px yellow
  & .title.red
    background red
  & .title.red:after
    arrow top 5px red

.w-cats-bd
  padding 0 1em 1em 0
  & li
    display inline-block
    margin 1em 0 0 1em
    font-size .8em
    text-decoration underline

/*
@name w-form
@overview 表单模块
@require null
*/
.w-form
  margin 10px
  & .error-msg
    margin 15px 0
    text-align center
    font-size 1rem
    color red

.w-form-item
  margin 15px 0
  &.readonly
    margin-bottom -5px
    font-size .88rem
    color #888
    & em
      color blue
  & .input
    display flex
    position relative
    padding 0 10px
    height 40px
    line-height 40px
    border 1px solid #ccc
    border-radius 3px
    box-shadow 0 2px 3px rgba(0,0,0,.08) inset
    white-space nowrap
    background #fff
  & label
    display inline-block
    color #888
    font-weight bold
  & label.icon
    text-indent -9999px
    width 18px
    // height 18px
    vertical-align middle
    background url(../img/icon-login.png) 50% 50% no-repeat
    background-size contain
  // & label.userid
  //   background-image url(../img/icon-login.png)
  & label.password
    background-image url(../img/icon-password.png)
  & label.email
    background-image url(../img/icon-email.png)
  & input[type='text'],
  & input[type='email'],
  & input[type='password']
    flex 1
    display block
    margin 8px 0 8px 15px
    height 24px
    line-height 24px
    font-size 1rem
    // color blue
    border none
    outline none
    background #fff
  & button
    display block
    margin-top 20px
    width 100%
    height 40px
    line-height 40px
    text-align center
    color #fff
    font-size 1.1rem
    letter-spacing .5rem
    border none
    border-radius 3px
    background linear-gradient(top, #D60000, #C20000)

/*
@name w-card
@overview 名片模块
@require null
*/
.w-card
  display flex
  margin-bottom 15px
  padding 10px
  border-bottom 1px #ccc solid
  background #fff
  & .avatar
    width 64px
    height 64px
    overflow hidden
    border 1px #ccc solid
    border-radius 5px
    & img
      display block
      width 100%
      height 100%
  & .info
    flex 1
    padding-left 1rem
    & h3
      font-size .95rem
      font-weight bold
      color #666
    & li
      margin-top 3px
      font-size .66rem
      color #999

/*
@name w-dialog
@overview 弹窗模块
@require null
*/
.w-dialog
  background #fff
  & .ui-dialog-title
    height 32px
    line-height 32px
    padding 0 10px
    border-radius 0
    text-align left
    font-size 1rem
    font-weight bold
    color red
    background none
  & .ui-dialog-close
    top 0
    right 10px
    padding 0
    margin 0
    border-radius 0
    & .ui-icon
      width 22px
      height 22px
      background #999 url(../img/gmu/icon-dialog-close.png) no-repeat
      background-size contain
  & .ui-dialog-content
    padding 10px

/* 登录弹窗 */
.w-dialog-login
  .w-form
    margin -10px 0 0
    & .w-form-item button
      margin-top 0
      height 35px
      line-height 35px
      font-size 1rem
    & .reg-now
      float left
      margin .5rem 0 1rem
      font-size .8rem
    & .forget-password
      float right
      margin .5rem 0 1rem
      font-size .8rem

/* Layout
========================================================================== */
// Header
#header
  // position fixed
  // z-index 1
  // top 0
  // width 100%
  position relative
  height 56px
  border-bottom 1px #D54646 solid
  background dark-red

  & .logo
    display inline-block
    margin 14px 0 0 10px
    width 191px
    height 22px
    text-indent -9999px
    background url(../img/logo.png) 0 0 no-repeat
    background-size contain

  & menu
    position absolute
    right 10px
    top 50%
    margin-top -16px
    font-size 0

    & a
      display inline-block
      margin-left 14px
      width 32px
      height 32px
      background-size contain
      background-repeat no-repeat

    & a.search
      background-image url(../img/icon-search.png)

    & a.login
      background-image url(../img/icon-login.png)

// Search
#search
  // margin-top 56px
  padding 10px 10px 5px
  background dark-gray

  & .search-cancel
    float right
    margin-left .8rem
    line-height 34px
    color dark-red
    font-size 1.3rem

  & .search-form
    & .panel
      display flex
      position relative
      height 34px
      border 1px #DBDBDB solid
      padding 6px 0 6px 34px
      background #fff url(../img/icon-search-small.png) 7px 50% no-repeat
      background-size 17px

      & input
        // width 100%
        flex 1
        height 20px
        line-height 20px
        border 0
        font-size 1.4rem
        color #000
        // background #ccc

      & input:focus
        outline none

      & .clear
        absolute right 7px top 50%
        transform translateY(-50%)
        size 16px
        border-radius 8px
        background #9F9F9F

        &:before,
        &:after
          content ''
          position absolute
          left 50%
          top 50%
          margin-left -5px
          width 10px
          height 1px
          background #fff
          transform rotate(45deg)

        &:after
          transform rotate(135deg)

  & .search-hot
    margin-top 5px
    height 16px
    line-height 16px
    overflow hidden

    & li
      float left
      margin-left 1.5rem
      color #a4a4a4

    & li:first-child
      margin-left 0

  & .search-keylist
    margin 12px -10px -5px
    background #fff

    & .keylist li
      padding 10px 14px
      border-bottom 1px #F0F0F0 solid
      color #000

      & strong
        font-weight normal
        color dark-red

// Footer
#footer
  margin-top 30px
  padding 15px 0 30px
  // padding 15px 0 70px
  text-align center
  background light-gray

  & nav ul
    height 14px
    line-height 14px
    font-size 0

    & li
      display inline-block
      padding 0 10px
      border-left 1px #ccc solid
      font-size 1.2rem
      color: dark-red

    & li:first-child
      border-left none

    &.sublinks
      margin-top 10px

      & li
        padding 0 8px
        color: #999

  & nav hr
    border-color #D5D5D5
    margin 12px 0 15px

  & .copyright
    margin 5px 0
    color: #666

// Main
#main
  background #fff

#categories
  & .category
    position relative
    padding 10px 0 10px 10px
    // padding 10px
    border-top 1px #ddd solid
    overflow hidden
    font-size 1rem
    font-family Arial
    color #000

    & > .pic
      float left
      width 82px
      margin-right 15px

      & > span
        display block
        max-height 24px
        line-height 12px
        overflow hidden

      & > img
        margin-top 5px
        width 100%
        height auto

    & > .slider-wrap
      position relative
      overflow hidden
      padding-right 10px

      & > .slider
        position relative
        overflow hidden
        visibility hidden
        // padding-right 20px

        & > .list
          position relative
          overflow hidden
          // width 9999px

          & > .item
            position relative
            float left
            width 100%
            // width 200px

            & > a
              position relative
              float left
              margin-bottom 10px
              padding 0 15px 0 7px
              height 30px
              line-height 15px
              overflow hidden
              width 50%
              color #000

              &:before
                content ''
                position absolute
                left 0
                top 7px
                width 2px
                height 2px
                background #838383

      & > .nav
        position absolute
        right 0
        top 0
        // margin-top -14px
        // width 20px
        width 25px
        height 100%
        background-position right 10px center
        background-repeat no-repeat
        background-size 7px
        background-color #fff

        &.next
          background-image url(../img/btn-next.png)

        &.prev
          background-image url(../img/btn-prev.png)

    &:first-child
      border-top 0

    &.hidden
      position absolute
      left -9999px
      width 100%

  & > .viewmore
    display block
    margin 0 10px 20px
    padding 0
    height 38px
    border-radius 5px
    color #fff
    font 1.6rem/38px 'Microsoft YaHei'
    text-align center
    background linear-gradient(top, #D70303, #CC0000)
    box-shadow 1px 1px rgba(0, 0, 0, .38)

    &:after
      content ''
      display inline-block
      margin -4px 0 0 8px
      width 8px
      height 8px
      border 1px #f7f7f7 solid
      border-width 0 1px 1px 0
      transform rotate(45deg)
      vertical-align middle

// Inquiries
.inquiries-wrap
  margin-top -15px
  height 55px

#inquiries
  position fixed
  z-index 1
  bottom 0
  width 100%
  height 55px
  line-height 55px
  text-align center
  background #404040

  & > i
    absolute left top
    z-index 1
    size 22px
    border-radius 0 0 22px 0
    background #000

    &:before,
    &:after
      content ''
      position absolute
      left 50%
      top 50%
      // margin-left -6px
      margin-left -9px
      margin-top -2px
      width 12px
      height 2px
      background #fff
      transform rotate(45deg)

    &:after
      transform rotate(135deg)

  & > .content
    position relative
    display inline-block
    height 100%
    padding-left 45px
    font-size 16px
    font-family Arial
    color #fff
    background url(../img/icon-cart.png) 0 50% no-repeat
    background-size 31px

    & > .count
      position absolute
      top 18px
      left 40px
      padding 0 5px
      height 18px
      line-height 18px
      // overflow hidden
      min-width 0
      max-width 200px
      border-radius 9px
      color #fff
      font-size 14px
      font-weight normal
      background #D50203
      transform translate(-100%, -50%)

// 注册页
.form-login
  margin-bottom 5rem
  & .forget-password
    margin-top 10px
    text-align right
    & a
      color blue
  & .reg-now
    margin-top 2rem
    text-align center
    color #999
    font-size .95rem
    & a
      color green

// 404
.cnt-404
  margin 5rem 10px
  & p
    margin 1.5rem 0
    text-align center
    & strong
      font-size .9rem
      color red
    & a
      font-size .95rem
      color blue
      text-decoration underline